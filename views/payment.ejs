            <li>🔟 🤍 Determination 🩷 — 👑1.921</li>
        </ul>
    </div>
</div>

<!-- Иконки с подписями YouTube, Telegram канал, Telegram Бот -->
<h2 id="social-networks">СОЦИАЛЬНЫЕ СЕТИ</h2>
<section class="icons-section">
    <div class="icon-box">
        <div class="icon"></div>
        <h3>YouTube</h3>
        <button class="icon-button" onclick="window.location.href='https://www.youtube.com/@Campobot';">Подписаться</button>
    </div>
    <div class="icon-box">
        <div class="icon"></div>
        <h3>Telegram канал</h3>
        <button class="icon-button" onclick="window.location.href='https://t.me/botcampo';">Присоединиться</button>
    </div>
    <div class="icon-box">
        <div class="icon"></div>
        <h3>Telegram Бот</h3>
        <button class="icon-button" onclick="window.location.href='https://t.me/CampoTG_Bot';">Запустить</button>
    </div>
</section>

<h2 id="donation-form">ДОНАТ</h2>

<form id="paymentForm" onsubmit="event.preventDefault(); redirectToPayment();">
    <label for="playerId">ID игрока:</label>
    <input type="text" id="playerId" name="playerId" required />

    <label for="campoCoins">CampoCoins:</label>
    <input type="number" id="campoCoins" name="campoCoins" required min="1" onchange="updateTotalAmount()"/>

    <label for="donationCurrency">Выберите валюту:</label>
    <select id="donationCurrency" name="donationCurrency" onchange="updateTotalAmount()">
        <option value="Rubles">Рубли</option>
    </select>

    <label for="totalAmount">Сумма к оплате:</label>
    <input type="text" id="totalAmount" name="totalAmount" readonly/>

    <div class="form-actions">
        <button type="submit">Оплатить</button>
        <img src="/images/1kLR.gif" alt="GIF Image" class="gif-image">
    </div>
</form>

<p id="errorMessage"></p>

</body>
</html>