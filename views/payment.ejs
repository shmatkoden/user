    <link rel="stylesheet" href="/styles/style.css">
    <script defer src="/scripts/payment.js"></script>
    <script defer src="/scripts/payment1.js"></script>
</head>
<body>

<!-- Шапка сайта -->
<header>
    <div class="header-line"></div>
    <nav>
