    <img src="/images/img1.png" alt="Изображение" class="main-image">
    <a href="https://t.me/botcampo" class="centered-button">ИГРАТЬ</a>
</div>

<!-- Список лучших империй -->
<div id="empireListModal" class="modal">
    <div class="modal-content">
        <span class="close">&times;</span>
        <h2>Топ лучших империй</h2>
        <ul>
